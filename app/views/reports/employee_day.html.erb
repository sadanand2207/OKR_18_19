<div class="main-title">
  <div class="element">
    <h5>Reports
      <a href="#" data-dropdown="drop1" class="report-select">Employee report for a day  â–¾</a>
      <ul id="drop1" class="f-dropdown report-select" data-dropdown-content>
        <%= render 'reports/report_types' %>
      </ul>
    </h5>
  </div>
</div>
<div class="report-options">
  <!--<form class="employee_daily_report_form" data-remote="false">-->
  <%= form_for(:report, :url => {:controller=>'reports',:action=>'employee_day'},:method=>:get,:remote=>true, :class => 'employee_daily_report_form') do %>
      <div class="report-type">
        <%= select_tag('employee_id', options_for_select(@users.map { |x| [x.name, x.id] }, @user.id)) %>
      </div>

      <div class="submit_button show-for-medium-up">
        <button>Go</button>
      </div>
      <div class="report-date">
        <%= text_field_tag 'start_date', @date, :class => 'date-only-input' %>
      </div>
      <div class="submit_button show-for-small-only">
        <button>Go</button>
      </div>

      <!--</form>-->
  <% end %>
</div>
<div class="report-renderer">
  <%= render :partial => 'reports/employee_day' %>
</div>
